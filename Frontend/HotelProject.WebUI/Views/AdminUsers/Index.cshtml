@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<a href="Register/Index" class="btn btn-outline-primary">Yeni Kullanıcı Kayıd</a>

<br>

<div class="table-responsive">
    <table class="table table-xs mb-0">
        <thead>
            <tr>
                <th>#</th>
                <th>Görsel</th>
                <th>Ad Soyad</th>
                <th>Şehir</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""></td>
                    <td>@item.Name @item.Surname</td>
                    <td>@item.City</td>
                    <td><i class="fa fa-circle-o text-success  mr-2"></i> Aktif</td>
                </tr>
            }
            
        </tbody>
    </table>
</div>

