@model List<ResultAppUserWithWorkLocationDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<a href="Register/Index" class="btn btn-outline-primary">Yeni Kullanıcı Kayıd</a>

<br>


<div class="col-lg-12">
    <div class="active-member">
        <div class="table-responsive">
            <table class="table table-xs mb-0">
                <thead>
                    <tr>
                        <th>Kullanıcı</th>
                        <th>Çalıştığu Şube</th>
                        <th>Ülke</th>
                        <th>Şehir</th>
                        <th>Durum</th>
                        <th>Cinsiyet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @*<img src="./images/avatar/1.jpg" class=" rounded-circle mr-3" alt="">Sarah Smith*@
                                <img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname
                            </td>
                            <td>@item.WorkLocationName</td>
                            <td>@item.Country</td>
                            <td> @item.City</td>
                            @if (item.Gender == "Erkek")
                            {
                                <td>
                                    <div>
                                        <div class="progress" style="height: 6px">
                                            <div class="progress-bar bg-success" style="width: 90%"></div>
                                        </div>
                                    </div>
                                </td>
                            }
                            @if (item.Gender == "Kadın")
                            {
                                <td>
                                    <div>
                                        <div class="progress" style="height: 6px">
                                            <div class="progress-bar bg-warning" style="width: 90%"></div>
                                        </div>
                                    </div>
                                </td>
                            }
                            @if (item.Gender == "Erkek")
                            {
                                <td><i class="fa fa-circle-o text-success  mr-2"></i> Erkek</td>
                            }
                            @if (item.Gender == "Kadın")
                            {
                                <td><i class="fa fa-circle-o text-warning  mr-2"></i> Kadın</td>
                            }
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

