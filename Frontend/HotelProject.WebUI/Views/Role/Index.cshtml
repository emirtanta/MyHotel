@model List<HotelProject.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rol Listesi</h1>

<a href="/Role/AddRole" class="btn btn-outline-primary">Rol Ekle</a>

<table class="table table-responsive table-hover">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a href="/Role/UpdateRole/@item.Id" class="btn btn-outline-info">Güncelle</a>
                <a href="/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
    }
</table>

