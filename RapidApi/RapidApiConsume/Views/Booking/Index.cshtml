@model List<BookingApiVM.Result>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1 class="text-center"> Rapid Api Üzerinden Seçilen Şehirdeki Otel Verilerini Getirir</h1>
<div class="container">
    <br />
    <table class="table table-hover table-responsive">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Otel Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td>
                    <a href="#" class="btn btn-outline-info">Detaylar</a>
                </td>
            </tr>
        }
    </table>
</div>

